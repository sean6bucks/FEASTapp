<p><%= link_to "&#8656; Back to Projects".html_safe, projects_path %></p>
<div class='title'><h1> <%= @project.name  %><h1></div>
<p><em> <%= @project.client %> <em></p>
<h3>Thumbnail Preview:</h3>
<%= image_tag @project.thumbnail.url(:preview) %>
<br>
<h3>Preveiw of Images:</h3>
<%= image_tag @project.jumbotron.url(:preview) %>
<br>
<%= image_tag @project.half_detail1.url(:preview) %>
<%= image_tag @project.half_detail2.url(:preview) %>
<h3>Proccesses:</h3>
<h4><%= @project.proccesses %></h4> 
<br>
<h3>Description:</h3>
<p><%= @project.description %></p>
<br>
<h3>Categories:</h3>
<ul>
<% @project.categories.each do |c| %>
    <li><h5><%= c.name %></h5></li>
<% end %>
</ul>
<br>
<h3>Options:</h3>
<% if @project.is_published %>
  <p style="color:green">Published -<span style="color: gray"><%= link_to " go to live portfolio site", works_path %></span></p>
<% else %>
  <p style="color:red">Unpublished -<span style="color: gray"><%= link_to " see preview of project", work_path(@project.displayname), target: '_blank' %></span></p>
<% end %>
<br>
<% if @project.is_slide %>
  <p style="color:green">Slide in Preview Slideshow</p>
<% end %>
<br>
<%= link_to "Edit Project", edit_project_path, method: :get, class: 'btn btn-info' %><span> | </span><%= link_to "Delete Project", project_path(@project), method: :delete,  data: {confirm: "Are you sure you want to delete this project?"}, class: 'btn btn-danger' %>
<br><br>
<p><%= link_to "&#8656; Back to Projects".html_safe, projects_path %></p>
<br>



