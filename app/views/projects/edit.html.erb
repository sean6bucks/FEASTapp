<div class='col-sm-8'>
<%= simple_form_for @project, html: {multipart: true} do |f| %>

  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@project.errors.count, "error") %> prevented this project from being created
      </h2>

      <ul>
        <% @project.errors.full_messages.each do |error| %>
          <li>
            <%= error %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name, placeholder: 'Project Name', value: :name %>
  <%= f.input :displayname, hint: 'Cannot have Uppercase Letters or Spaces',  placeholder: 'projectname', value: :displayname%>
  <%= f.input :thumbnail, label: 'Thumbnail Image', hint: 'thumbnail should be 400 x 400px', as: :file, value: :thumbnail %>
  <%= f.input :jumbotron, label: 'Jumbotron Image', hint: 'Jumbotron image should be 1200 x 720', as: :file %>
  <input type="checked" name="choice-details" id="choice-half-details">
  <label for="choice-half-detail">Add Detail Images:</label>
      
  <div class="reveal-if-active">
    <%= f.input :half_detail1, label: 'First Half Width Detail Images', hint: 'Detail images should be 600 x 720px', as: :file %>
    <%= f.input :half_detail2, label: 'Second Half Width Detail Images', hint: 'Detail images should be 600 x 720px', as: :file %>
  </div>
  <%= f.input :client, placeholder: 'Client\'s Name', value: :client%>
  <%= f.input :proccesses, placeholder: 'Sculpting, Life Casting, etc.', value: :proccesses %>
  <%= f.input :description, placeholder: 'Max. 500 characters', input_html: {maxlength: 500, rows: 5}, as: :text, value: :description %>

  <%= f.association :categories, as: :check_boxes, placeholder: 'Used for sorting projects on main porfolio page.' %>
  <label> Options </label>
  <%= f.input :is_published, inline_label: 'Published', hint: 'Project will not appear on portfolio page until PUBLISHED', value: :is_published %>
  <%= f.input :is_slide, inline_label: 'Preview Slide', hint: 'If checked, image will appear on scrolling portfolio preview AND large slideshow', value: :is_published %>
  
  <%= f.button :submit %>

<% end %>
</div>