<%= simple_form_for @project, html: {multipart: true} do |f| %>

  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@project.errors.count, "error") %> prevented this project from being created
      </h2>

      <ul>
        <% @project.errors.full_messages.each do |error| %>
          <li>
            <%= error %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name %>
  <%= f.input :client %>
  <%= f.input :proccesses %>
  <%= f.input :description %>
  <%= f.input :is_publishes, inline_label: 'Published' %>

  <%= f.association :categories, as: :check_boxes %>
  
  <%= f.button :submit %>

<% end %>