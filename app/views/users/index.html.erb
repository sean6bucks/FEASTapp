<div id='userWrapper'>
  <div class='row'>
    <h1 class='userTitle'>Users List</h1>
  </div>
  <div class='row'>
    <div class="col-md-6">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Options</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
            <td><%= link_to user.username, user_path(user) %></td>
            <td><%= user.email %></td>
            <td><%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user?"} %></td>
              </tr>
          <% end %>
          <tr>
            <%= link_to "New User", new_user_registration_path, method: :get, class: 'btn btn-primary' %>
          </tr>
        </tbody>
      </table>    
    </div>
  </div>
</div>